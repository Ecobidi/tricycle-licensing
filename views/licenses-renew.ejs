<%- include ('partials/top') %>
  .<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
      <h2 class="mb-4">Renew Tricycle License</h2>

      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <form action="/licenses/renew" method="GET">
        <div class="form-group mb-2">
          <input type="text" class="form-control-lg text-center" style="width: 70%; margin: auto;" name="metro_no" placeholder="Search for license by unique metro number...">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary">Search</button>
        </div>
      </form>
    </div>
  </div>

  <% if (renewLicense) { %>
    <div class="row">
      <div class="col-lg-6 col-md-12">
        <table class="table table-striped">
          <tbody>
            <tr>
              <td>Date of Issue</td>
              <td><%= license.date_of_renewal %></td>
            </tr>
            <tr>
              <td>Amount Paid</td>
              <td>(NGN) <%= license.amount_paid %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-lg-6 col-md-12">
        <table class="table table-striped">
          <tbody>
            <tr>
              <td>Date of Expiry</td>
              <td><%= license.date_of_expiry %></td>
            </tr>
            <tr>
              <td>Unique Metro Number</td>
              <td><%= license.tricycle_metro_no %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-12">
        <div class="jumbotron">
          <h3 class="lead mb-3">Fill in all the below information to renew vehicle license</h3>
          <form class="row" action="/licenses/renew" method="POST">
            <input type="hidden" name="license_id" value='<%= license._id %>'>
            <div class="form-group col-4">
              <label>Amount Paid</label>
              <input class="form-control" required type="number" name="amount" placeholder="Amount Paid">
            </div>
            <div class="form-group col-4">
              <label>Date of Renewal</label>
              <input class="form-control" required type="date" name="date_of_renewal">
            </div>
            <div class="form-group col-4">
              <label>Date of Expiry</label>
              <input class="form-control" required type="date" name="date_of_expiry">
            </div>
            <div class="form-group col-6 offset-3">
              <button type="submit" class="btn btn-primary btn-block">Renew</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>