<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Tricycle Details</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <% if (! edit) { %>
      <form action="/tricycles/new" class="row" method="POST" enctype="multipart/form-data">
      <% } else { %>
      <form action='<%= "/tricycles/edit/" + tricycle._id  %> ' class="row" method="POST">
      <% } %>
        <div class="form-group col-4">
          <label>Tricycle Vehicle Idenfication Number (V.I.N.)</label>
          <input value='<%= tricycle.vin %>' type="text" class="form-control" name="vin" required>
        </div>
        <div class="form-group col-4">
          <label>Unique Metropolitan Number</label>
          <input value='<%= tricycle.metro_number %>' type="text" class="form-control" name="metro_number" required>
        </div>
        <div class="form-group col-4">
          <label>Engine Number</label>
          <input value='<%= tricycle.engine_no %>' type="text" class="form-control" name="engine_no" required>
        </div>
        <div class="form-group col-8">
          <label>Owner's Full Name</label>
          <input value='<%= tricycle.owner_name %>' type="text" class="form-control" name="owner_name">
        </div>
        <div class="form-group col-4">
          <label>Drivers License Number</label>
          <input value='<%= tricycle.driver %>' type="text" class="form-control" name="driver_license_no" required>
        </div>
        <div class="form-group col-4">
          <label>Mode of Ownership</label>
          <div>
            <label class="d-inline-block mr-4" for="pv-1">
              <input required type="radio" name="mode_of_ownership" value="private" id="pv-1">  Privately Owned
            </label>
            <label class="d-inline-block" for="pv-2">
              <input required type="radio" name="mode_of_ownership" value="hire-purchase" id="pv-2">  Hire Purchased
            </label>
          </div>
        </div>
        <div class="form-group col-4">
          <label>Vehicle Plate Number</label>
          <input value='<%= tricycle.vehicle_plate_number %>' type="text" class="form-control" name="vehicle_plate_number">
        </div>
        <div class="form-group col-4">
          <label>Vehicular Model</label>
          <input value='<%= tricycle.vehicle_model %>' type="text" class="form-control" name="vehicle_model">
        </div>
        <div class="form-group col-4">
          <label>Vehicular Year</label>
          <input value='<%= tricycle.vehicle_year %>' type="text" class="form-control" name="vehicle_year">
        </div>
        <div class="form-group col-4">
          <label>Body Paint Color</label>
          <input value='<%= tricycle.color %>' type="text" class="form-control" name="color">
        </div>
        <% /* %>
        <div class="form-group col-4">
          <label>Evidence of Ownership (optional)</label>
          <input type="file" class="form-control" name="evidence_of_ownership" accept="image/jpg, image/png">
        </div>
        <% */ %>
        <div class="col-4 offset-4">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>

  </div>

</main>
</div>
</div> 

<%- include ('partials/bottom') %>