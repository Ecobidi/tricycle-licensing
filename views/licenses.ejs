<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Tricycles Licenses</h3>
      <div>
        <a href="/licenses/new" class="btn btn-primary">Register New License</a>
      </div>
    </div>
  </div>

  <div class="row space">
    <div>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= success_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
    </div>
    <div class="col-12">
      <form id="search-form" method="GET" action="/licenses?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="tricycle_metro_no" id="search-box" class="form-control" placeholder="Search by metro number ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Registered Licenses</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>Tricycle Metro No.</td>
            <td>Date of Issued</td>
            <td>Date of Expiry</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% licenses.forEach((m) => { %>
            <tr>
              <td><small><%= m.tricycle_metro_no %></small></td>
              <td><small><%= m.date_of_renewal %></small></td>
              <td><small><%= m.date_of_expiry %></small></td>
              <td>
                <a href='<%= "/licenses/renew?license_id=" + m._id %>' class="btn btn-sm btn-primary">Renew</a>
                <a href='<%= "/licenses/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>